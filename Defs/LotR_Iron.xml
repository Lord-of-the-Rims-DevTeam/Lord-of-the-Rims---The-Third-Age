<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--================== Bases ==================-->
  
  <ThingDef Name="LotR_ResourceBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>75</stackLimit>
		<statBases>
			<Beauty>-4</Beauty>
		</statBases>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
		<alwaysHaulable>true</alwaysHaulable>
		<drawGUIOverlay>true</drawGUIOverlay>
		<rotatable>false</rotatable>
		<pathCost>15</pathCost>
	</ThingDef>

  <ThingDef Name="LotR_ChunkBase" Abstract="True">
    <category>Item</category>
    <thingClass>Thing</thingClass>
    <altitudeLayer>Item</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.50</fillPercent>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <Flammability>0</Flammability>
      <Beauty>-8</Beauty>
      <Cleanliness>-2</Cleanliness>
    </statBases>
    <selectable>true</selectable>
    <pathCost>55</pathCost>
    <pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
    <drawerType>MapMeshOnly</drawerType>
    <randomizeRotationOnSpawn>true</randomizeRotationOnSpawn>
    <designateHaulable>true</designateHaulable>
    <saveCompressible>true</saveCompressible>
    <stackLimit>1</stackLimit>
    <tradeability>Never</tradeability>
  </ThingDef>
	
  <ThingDef ParentName="LotR_ResourceBase">
    <defName>LotR_Iron</defName>
    <label>iron</label>
    <description>A sturdy natural resource used for building structures, tools, and weapons.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Metal</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <color>(235,235,235)</color>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>1.75</MarketValue>
      <Mass>0.6</Mass>
      <SharpDamageMultiplier>0.9</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.9</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <slagDef>LotR_ChunkSlagIron</slagDef>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>4</deepCommonality>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <commonality>1.00</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(108,102,105)</color>
      <soundImpactStuff>BulletImpactMetal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>1.1</MaxHitPoints>
        <Beauty>0.8</Beauty>
        <Flammability>0.3</Flammability>
        <MeleeWeapon_CooldownMultiplier>1.05</MeleeWeapon_CooldownMultiplier>
      </statFactors>
      <smeltable>true</smeltable>
    </stuffProps>
  </ThingDef>
 

  <ThingDef ParentName="LotR_ChunkBase">
    <defName>LotR_ChunkSlagIron</defName>
    <label>iron slag chunk</label>
    <description>A chunk of iron slag. Not very useful in its current form but it's possible to smelt iron from it.</description>
    <graphicData>
      <texPath>Things/Item/Chunk/ChunkSlag</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Mass>5</Mass>
    </statBases>
    <soundDrop>ChunkSlag_Drop</soundDrop>
    <thingCategories>
      <li>Chunks</li>
    </thingCategories>
    <smeltProducts>
      <LotR_Iron>10</LotR_Iron>
    </smeltProducts>
  </ThingDef>

  <ThingDef ParentName="LotR_ResourceBase">
    <defName>LotR_Mithril</defName>
    <label>mithril</label>
    <description>A feather-light material that resembles silver, yet is stronger and lighter than steel. It is also the rarest material in the known-world, which makes it immensely valuable.</description>
    <graphicData>
      <texPath>Things/Item/Resource/edmundWulfgarthMithril</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Silver_Drop</soundInteract>
    <soundDrop>Silver_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <MarketValue>50</MarketValue>
      <Mass>0.3</Mass>
      <SharpDamageMultiplier>1.4</SharpDamageMultiplier>
      <BluntDamageMultiplier>1.2</BluntDamageMultiplier>
    </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>0</deepCommonality>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <commonality>0.0</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(213,225,245)</color>
      <soundImpactStuff>BulletImpactMetal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statOffsets>
        <Beauty>6</Beauty>
      </statOffsets>
      <statFactors>
        <MaxHitPoints>2.8</MaxHitPoints>
        <Beauty>2</Beauty>
        <Flammability>0.1</Flammability>
        <WorkToMake>2.2</WorkToMake>
				<WorkToBuild>2.2</WorkToBuild>
        <MeleeWeapon_CooldownMultiplier>0.8</MeleeWeapon_CooldownMultiplier>
      </statFactors>
      <smeltable>true</smeltable>
    </stuffProps>
  </ThingDef>
  
</Defs>
