<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="LotR_BenchBase">
    <defName>LotR_TableSmithy</defName>
    <label>blacksmith anvil and forge</label>
    <thingClass>Building_WorkTable</thingClass>
    <description>The central hub of development for creating weapons and armor.</description>
    <graphicData>
      <texPath>Things/Building/Production/aPurpleAppleForge</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(7.0,7.0)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
	  <shadowData>
		<volume>(0.4, 0.8, 0.4)</volume>
	  </shadowData>
    </graphicData>
    <costList>
      <Steel>30</Steel>
    </costList>
	<costStuffCount>100</costStuffCount>
	<stuffCategories>
	  <li>Stony</li>
	</stuffCategories>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>3000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-2</Cleanliness>
    </statBases>
    <size>(4,2)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes></recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>80.0</fuelConsumptionRate>
        <fuelCapacity>50.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Glower">
        <glowRadius>5</glowRadius>
        <glowColor>(73,123,138,0)</glowColor>
      </li>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <heatPerTickWhileWorking>0.30</heatPerTickWhileWorking>
	  <workSpeedPenaltyOutdoors>false</workSpeedPenaltyOutdoors>
	  <workSpeedPenaltyTemperature>false</workSpeedPenaltyTemperature>
    </building>
    <researchPrerequisites>
	  <li>Smithing</li>
	</researchPrerequisites>
    <designationHotKey>Misc7</designationHotKey>
	<placeWorkers>
		<li>PlaceWorker_ShowFacilitiesConnections</li>
	</placeWorkers>
    <castEdgeShadows>false</castEdgeShadows>
    <staticSunShadowHeight>0</staticSunShadowHeight>
  </ThingDef>
	
</Defs>
